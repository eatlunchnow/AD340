<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fun Facts About Kiara"
        android:textColor="@android:color/black"
        android:textSize="35sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="cursive"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. She likes to lift weights."
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. She loves the show Parks &amp; Recreation."
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="3. She loves a good deal."
        android:textColor="@android:color/black"
        android:textSize="25sp" /><![CDATA[

    android:layout_marginBottom="-1dp" />

    ]]>

    <Button
        android:id="@+id/back_button"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="251dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:fontFamily="sans-serif"
        android:text="Back"
        android:textColor="@android:color/holo_blue_bright"
        android:textStyle="bold" />

    <Button
        android:id="@+id/mapButton"
        android:layout_width="76dp"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="115dp"
        android:layout_toStartOf="@+id/back_button"
        android:backgroundTint="@android:color/holo_green_light"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Map"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="italic" />

    <Button
        android:id="@+id/toastButton2"
        android:layout_width="76dp"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-81dp"
        android:layout_marginBottom="122dp"
        android:layout_toStartOf="@+id/back_button"
        android:backgroundTint="@android:color/background_light"
        android:fontFamily="serif-monospace"
        android:text="Show Toast 2"
        android:textColor="@android:color/darker_gray"
        android:textStyle="normal" />

    <Button
        android:id="@+id/camButton"
        android:layout_width="76dp"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="119dp"
        android:layout_toStartOf="@+id/back_button"
        android:backgroundTint="@android:color/holo_green_light"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Camera List"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="italic" />

    <Button
        android:id="@+id/movieButton"
        android:layout_width="76dp"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="185dp"
        android:layout_marginBottom="119dp"
        android:layout_toStartOf="@+id/back_button"
        android:backgroundTint="@android:color/holo_green_light"
        android:fontFamily="sans-serif-smallcaps"
        android:text="Movies"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="italic" />

    <include
        layout="@layout/app_bar"
        android:id="@+id/app_bar">
    </include>

    <EditText
        android:id="@+id/email_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="39dp"
        android:layout_marginTop="332dp"
        android:ems="10"
        android:hint="E-mail address"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/password_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="273dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="272dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <Button
        android:id="@+id/signin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="222dp"
        android:text="Sign In" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="164dp"
        android:layout_marginBottom="228dp"
        android:text="Register" />


</RelativeLayout>